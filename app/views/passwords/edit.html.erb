<h1>Edit Password</h1>

<%= form_with model: Current.user, url: edit_password_path, local: true do |form| %>
    <% if form.object.errors.any? %>
        <div class="alert alert-danger">
            <% form.object.errors.full_messages.each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>
    <% end %>

    <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
    </div>

    <div class="mb-3">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Re-enter your password" %>
    </div>

    <%= form.submit "Update password", data: { turbo: false }, class: "btn btn-primary" %>
<% end %>